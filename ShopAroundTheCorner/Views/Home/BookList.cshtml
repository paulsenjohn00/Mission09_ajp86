@{
}

@model BooksViewModel

<div class="row m-1 p-1">
    <div class="col-3">
        <vc:categories></vc:categories>
    </div>


    <div class="col-9">
        @*Loops through each book and adds the information to html dynamically*@
        @foreach (Books b in Model.Books)
        {
            <partial name="BookSummary" model="b" />
        }

        @*Styles and creates the page links at the bottom of the page*@
        <div page-model="@Model.PageInfo" page-action="BookList" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-outline-dark"
             page-class-selected="btn-primary" class="btn-group pull-right m-1">
        </div>
    </div>
</div>
