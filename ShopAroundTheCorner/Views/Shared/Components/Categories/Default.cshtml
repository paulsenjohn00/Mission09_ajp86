@{
}

@model IEnumerable<string>

<div class="grid gap-2">
    <a asp-controller="Home" asp-action="BookList" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-block btn-outline-secondary">Home</a>

    @foreach (string cat in Model)
    {
        <a asp-controller="Home" asp-action="BookList" asp-route-bookCategory="@cat" asp-route-pageNum="1"
           class="btn btn-block @(ViewBag.SelectedType == cat ? "btn-primary" : "btn btn-outline-secondary")">@cat</a>
    }
</div>